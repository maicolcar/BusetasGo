<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startpage.InicioSesionP">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tituloPasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Inicio de SesiÃ³n - Pasajero"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/iconoapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPasajero" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/correo_texto"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="270dp"
        android:background="@color/white"
        android:contentDescription="@string/correo"
        android:text="@string/correo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/correo"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:hint="@string/correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo_texto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/password_texto"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:contentDescription="@string/password"
        android:text="@string/password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:hint="@string/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_texto" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inicio_sesion"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/boton"
        android:text="@string/iniciars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/new_passwordP"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="656dp"
        android:background="@color/white"
        android:contentDescription="@string/newpassword"
        android:text="@string/newpassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cambiarAConductor"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="710dp"
        android:background="@drawable/boton_c"
        android:text="Cambiar a Conductor"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crearCuenta"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginTop="770dp"
        android:background="@drawable/boton_c"
        android:text="@string/crearC"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>