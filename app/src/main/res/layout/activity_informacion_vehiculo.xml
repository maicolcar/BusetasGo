<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cerrarSesionButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_menu_directions"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/tituloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="General"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <TextView
                android:id="@+id/subtituloTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Información del vehículo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start" />

            <EditText
                android:id="@+id/placaEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:hint="Placa del vehículo"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/colorEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Color del vehículo"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/entidadEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Entidad con la que opera"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/capacidadEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Capacidad del vehículo"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/ubicacionEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Ubicación"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/registrarButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#03A9F4"
                android:text="REGISTRAR"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cerrarSesionButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:backgroundTint="#404DFF"
        android:text="CERRAR SESIÓN"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 