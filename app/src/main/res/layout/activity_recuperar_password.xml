<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startpage.RecuperarPasswordP">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagen"
        android:layout_width="226dp"
        android:layout_height="186dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/iconoapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurar_password_P"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="316dp"
        android:contentDescription="@string/restaurar"
        android:text="@string/restaurar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recuperar_password_P"
        android:layout_width="283dp"
        android:layout_height="69dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/boton"
        android:text="@string/enviar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>